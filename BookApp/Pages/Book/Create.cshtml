@page
@model BookApp.Pages.Book.CreateModel
@{
    ViewData["Title"] = "Create Book";
}


<h1>Create Books</h1>
<hr />

<div class="row">
    <div class="col-6">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Book Title</label>
                <input asp-for="Books.book_title" class="form-control" />
                <span asp-validation-for="Books.book_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Book Description</label>
                <input asp-for="Books.book_desc" class="form-control" />
                <span asp-validation-for="Books.book_desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Book Author</label>
                <input asp-for="Books.book_author" class="form-control" />
                <span asp-validation-for="Books.book_author" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-page="Index" class="btn btn-danger">Back</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}