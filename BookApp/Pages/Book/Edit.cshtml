@page
@model BookApp.Pages.Book.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />

<div class="row">
    <div class="col-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Books.Id" />

            <div class="form-group">
                <label>Book Title</label>
                <input asp-for="Books.book_title" class="form-control" />
                <span asp-validation-for="Books.book_title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label>Book Description</label>
                <input asp-for="Books.book_desc" class="form-control" />
                <span asp-validation-for="Books.book_desc" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label>Book Author</label>
                <input asp-for="Books.book_author" class="form-control" />
                <span asp-validation-for="Books.book_author" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-page="./Index" class="btn btn-danger">Back</a>
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}