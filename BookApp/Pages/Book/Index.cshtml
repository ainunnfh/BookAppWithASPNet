@page
@model BookApp.Pages.Book.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h1>Books List</h1>
<hr />
<a asp-page="Create" class="btn btn-success float-end">Create</a>
<table class="table table-responsive table-striped table-hover align-middle">
    <thead>
        <tr class="text-center">
           
            <th>Book Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr class="text-center">
                <td>@Html.DisplayFor(model => book.book_title)</td>
                <td>@Html.DisplayFor(model => book.book_desc)</td>
                <td>@Html.DisplayFor(model => book.book_author)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Detail" asp-route-id="@book.Id" class="btn btn-success">Details</a>
                    <a asp-page="./Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
